<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: linear-gradient(to bottom right, #ffffff, #f0f0f0);" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller = "Controllers.OrderConfirmationController">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
        <Image url="@Images/checkmark-icon.png"/>
    </ImageView>

    <Label text="Order Placed!" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #2ECC71;">
        <font>
            <Font name="System Bold" size="36.0"/>
        </font>
    </Label>

    <Label text="Thank you for your purchase!" style="-fx-font-size: 18px; -fx-text-fill: #7f8c8d;">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>


    <Button fx:id="backToHomeBtn" text="Back to Home" onAction="#backToHome" 
            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20 10 20; -fx-background-radius: 5;">
        <font>
            <Font size="16.0"/>
        </font>
    </Button>
</VBox>