<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600" prefWidth="800" style="-fx-background-color: #E8F0F2;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.SupplierRequestController">
    
   
    <AnchorPane prefHeight="123.0" prefWidth="800.0" style="-fx-background-color: #023047;">
        <children>
            <ImageView fitHeight="149.0" fitWidth="204.0" layoutX="13.0" layoutY="17.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@Images/stackshop-logo%20(3).png" />
                </image>
            </ImageView>
            <Label layoutX="588.0" layoutY="47.0" prefHeight="26.0" prefWidth="121.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Supplier Requests" textFill="WHITE" />
        </children>
    </AnchorPane>
    
  
    <TableView fx:id="requestTable" layoutX="22.0" layoutY="185.0" prefHeight="275.0" prefWidth="706.0" style="-fx-border-color: #023047; -fx-border-width: 2px; -fx-background-color: white; -fx-padding: 10px;">
        <columns>
          
            <TableColumn fx:id="supplierColumn" prefWidth="200.0" text="Supplier" />
            
            
            <TableColumn fx:id="companyColumn" prefWidth="250.0" text="Company Name" />
            
           
              <TableColumn fx:id="Actions" prefWidth="250.0" text="Action" />
        </columns>
    </TableView>
    
  
    <Button fx:id="backBtn" layoutX="721.0" layoutY="544.0" onAction="#backBtnAction" style="-fx-background-color: #023047; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px; -fx-border-radius: 5px; -fx-background-radius: 5px;" text="← Back" />
</AnchorPane>
