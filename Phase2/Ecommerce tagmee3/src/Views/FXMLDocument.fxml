<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.FXMLDocumentController">

    <children>
        <!-- Login Pane -->
        <AnchorPane fx:id="pane_login" prefHeight="400" prefWidth="600" visible="true">
            <children>
                <TextField fx:id="txt_username" layoutX="137.0" layoutY="148.0" prefWidth="200" promptText="Username" />
                <PasswordField fx:id="txt_password" layoutX="137.0" layoutY="187.0" prefWidth="200" promptText="Password" />
                <ComboBox fx:id="type" layoutX="362.0" layoutY="148.0" prefHeight="26.0" prefWidth="106.0" promptText="Select Type" />
                <Button layoutX="128.0" layoutY="225.0" onAction="#Login" prefHeight="42.0" prefWidth="218.0" style="-fx-background-color: #4169e1;" text="Login" textFill="WHITE">
                    <font>
                        <Font name="System Bold Italic" size="18.0" />
                    </font>
                </Button>
                <Label fx:id="lbl_feedback_login" layoutX="200" layoutY="280" style="-fx-text-fill: red;" />
                <Button layoutX="362.0" layoutY="334.0" onAction="#SignuppaneShow" prefHeight="42.0" prefWidth="218.0" style="-fx-background-color: #4169e1;" text="Go to SignUp" textFill="WHITE">
                    <font>
                        <Font name="System Bold Italic" size="18.0" />
                    </font>
                </Button>
                <Label layoutX="33.0" layoutY="181.0" text="Password">
                    <font>
                        <Font name="System Bold Italic" size="18.0" />
                    </font>
                </Label>
                <Label alignment="CENTER" layoutX="20.0" layoutY="147.0" prefHeight="18.0" prefWidth="106.0" text="Username">
                    <font>
                        <Font name="System Bold Italic" size="18.0" />
                    </font>
                </Label>
                <Pane layoutY="-3.0" prefHeight="103.0" prefWidth="600.0" style="-fx-background-color: #000000;" />
            </children>
        </AnchorPane>

        <!-- SignUp Pane -->
        <AnchorPane fx:id="pane_signup" prefHeight="400" prefWidth="600" style="-fx-background-color: #e6e6e6;" visible="false">
            <children>
                <TextField fx:id="txt_username_up" layoutX="137.0" layoutY="148.0" prefWidth="200" promptText="New Username" />
                <PasswordField fx:id="txt_password_up" layoutX="137.0" layoutY="187.0" prefWidth="200" promptText="New Password" />
                <ComboBox fx:id="type_up" layoutX="362.0" layoutY="148.0" prefHeight="26.0" prefWidth="106.0" promptText="Select Type" />
                <Button layoutX="128.0" layoutY="225.0" onAction="#SignUp" prefHeight="42.0" prefWidth="218.0" style="-fx-background-color: #4169e1;" text="SignUp" textFill="WHITE">
                    <font>
                        <Font name="System Bold Italic" size="18.0" />
                    </font>
                </Button>
                <Label fx:id="lbl_feedback_signup" layoutX="200" layoutY="280" style="-fx-text-fill: red;" />
                <Button layoutX="362.0" layoutY="334.0" onAction="#LoginpaneShow" prefHeight="42.0" prefWidth="218.0" style="-fx-background-color: #4169e1;" text="Go to Login" textFill="WHITE">
                    <font>
                        <Font name="System Bold Italic" size="18.0" />
                    </font>
                </Button>
                <Label layoutX="33.0" layoutY="181.0" text="Password">
                    <font>
                        <Font name="System Bold Italic" size="18.0" />
                    </font>
                </Label>
                <Label alignment="CENTER" layoutX="20.0" layoutY="147.0" prefHeight="18.0" prefWidth="106.0" text="Username">
                    <font>
                        <Font name="System Bold Italic" size="18.0" />
                    </font>
                </Label>
                <Pane layoutY="-3.0" prefHeight="103.0" prefWidth="600.0" style="-fx-background-color: #000000;" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>